<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JudgementZone.UI.StartGamePage"
             Title="Create Game">
    <ContentPage.Content>
        <StackLayout
            Spacing="6" BackgroundColor="{StaticResource Dark_Background}" Padding="20" Orientation="Vertical">
            <Label Text="Enter your desired username:"
                    TextColor="{StaticResource JZ_White}"/>
            <Entry x:Name="UsernameEntryField"
                    VerticalOptions="Start" HorizontalOptions="Fill"
                    BackgroundColor="{StaticResource JZ_White}"
                    Placeholder="Username"
                    Margin="0,0,0,18"/>
            <Button x:Name="CreateNewGameButton"
                    Text="Create New Game"
                    BackgroundColor="LightSkyBlue"
                    TextColor="Black"
                    Clicked="CreateNewGameButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>