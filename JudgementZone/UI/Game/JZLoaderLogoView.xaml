<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="JudgementZone.UI.JZLoaderLogoView">
	<ContentView.Content>
            <AbsoluteLayout x:Name="LogoAbsoluteLayout" IsClippedToBounds="true" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
                <Image  x:Name="LogoBackground"
                        Source="LogoRawScriptGray.png"
                        AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                        AbsoluteLayout.LayoutBounds=".5,.5,1,-1"
                        Aspect="AspectFill"
                />
                <Image  x:Name="ColoredLogoStandIn"
                        Source="LogoRawScriptRed.png"
                        AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                        AbsoluteLayout.LayoutBounds=".5,.5,1,-1"
                        Aspect="AspectFill"
                        IsVisible="false"
                />
                <Image  x:Name="ColoredLogo"
                        Source="LogoRawScriptRed.png"
                        AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                        AbsoluteLayout.LayoutBounds=".5,.5,1,-1"
                        Aspect="AspectFill"
                />
            </AbsoluteLayout>
	</ContentView.Content>
</ContentView>